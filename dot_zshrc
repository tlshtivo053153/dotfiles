# fzf
#export FZF_DEFAULT_COMMAND='rg --files --hidden --glob "!.git"'
export FZF_DEFAULT_COMMAND='rg --files --follow --hidden --glob "!.git" --glob "!.wine" --glob "!.cache" --glob "!.stack" --glob "!.stack-work" --glob "!.mozilla" --glob "!sshfs"'
